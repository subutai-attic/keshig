<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="keshig" availability="mandatory"
             interface="io.subutai.plugin.keshigqd.api.KeshigQD" />

  <reference id="tracker"
             interface="io.subutai.core.tracker.api.Tracker" />

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

    <command name="keshigqd/list-server">
      <action class="io.subutai.plugin.keshigqd.cli.server.ListServers">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/set-server">
      <action class="io.subutai.plugin.keshigqd.cli.server.SetupServer">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/clone">
      <action class="io.subutai.plugin.keshigqd.cli.operation.CloneCommand">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/build">
      <action class="io.subutai.plugin.keshigqd.cli.operation.BuildCommand">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/deploy">
      <action class="io.subutai.plugin.keshigqd.cli.operation.DeployCommand">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/test">
      <action class="io.subutai.plugin.keshigqd.cli.operation.TestCommand">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/list-builds">
      <action class="io.subutai.plugin.keshigqd.cli.builds.ListBuilds">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/list-packages">
      <action class="io.subutai.plugin.keshigqd.cli.builds.ListBuilds">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
    <command name="keshigqd/add-clone">
      <action class="io.subutai.plugin.keshigqd.cli.option.AddCloneOption">
        <property name="keshig" ref="keshig" />
      </action>
    </command>
  </command-bundle>

</blueprint>
